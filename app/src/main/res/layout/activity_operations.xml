<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OperationsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de las bombas de RegadÃ­o"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/button_bomba_on"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:layout_below="@+id/textView2"
                    android:background="#fafafa"
                    android:drawableTop="@drawable/power1"
                    android:text="Encender"
                    android:clickable="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

                <Button
                    android:id="@+id/button_bomba_off"
                    android:layout_width="66dp"
                    android:layout_height="93dp"
                    android:layout_alignTop="@+id/button_bomba_on"
                    android:layout_centerHorizontal="true"
                    android:background="#fafafa"
                    android:drawableTop="@drawable/power2"
                    android:text="Apagar"
                    android:clickable="true"
                    android:scrollHorizontally="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:text="Otras Operaciones"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/planta"
                    android:focusable="true"
                    android:text="Agregar Nuevo Cultivo"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
